[user]
	name = Travers McInerney
	email = travers@mcinerney.me

[alias]
  a       = add -p
  co      = checkout
  ci      = commit -v
  cim     = commit -m
  st      = status -sb
  br      = branch
  hist    = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  lg      = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  standup = log --since=yesterday --author='Travers McInerney'
  pr      = pull-request

[color]
  ui = true

[color "status"]
  changed   = yellow
  added     = green
  untracked = red

[push]
  default = simple

[pull]
  default = simple

[branch]
  autosetuprebase = always